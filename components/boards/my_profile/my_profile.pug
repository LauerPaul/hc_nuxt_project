.board.user-profile

	.avatar-col
		//- Premium case
		span.premium-icon(v-if="user && user.isPremium",
							id="diamond",
							@click="show_diamon_popup=!show_diamon_popup")
			i.hc.hc-diamond
		//- Premium popover 
		b-popover(v-if="user && user.isPremium",
					target="diamond",
                 	placement="bottomright",
                 	:show.sync="show_diamon_popup")
			.diamond-tooltip {{ $t('info.premium') }}
				.bottom-popover-line.text-right
					a {{ $t('links.more') }}

		//- Avatar
		.avatar-wrapper
			img(v-lazy="user.avatar")
			.edit-btn
				i.hc.hc-edit

	.user-info-wrapper
		.row-board
			//- Name
			.user-name {{ fullName }}
				i.device.hc(v-if="user && user.device_type", :class="'hc-' + deviceIcon[user.device_type]")
			
			//- Buttons
			.btn-control-wrapper(v-if="user")
				//- Menu
				button.btn-icon-circle(:title="$t('boards.profile.edit_profile')")
					i.hc.hc-edit

		.row-board.user-first-info 
			span(v-if="user && user.age") {{ user.age }} лет
			span {{ zodiacName }}
			span(v-if="locale") {{ locale }} {{user.looking_for}}
		
		.row-board.user-preference
			//- .key(v-if="user && user.lookingFor") {{ $t('boards.profile.i_m_looking_for') }}:
			//- .value(v-if="user && user.lookingFor")
			//- 	span(v-for="(item, index) in user.lookingFor", :key="index") {{ item }}
			.key {{ $t('boards.profile.i_m_looking_for') }}: 
			.value
				span Девушку
				span (!доработать)

		.row-board.user-purposes
			//- .tabs-list(v-if="user && user.purposes")
			//- 	button.item-tab(v-for="(item, index) in user.purposes", :key="index", type="button") {{ item }}
			.tabs-list
				span.item-tab Секс без обязательств
				span.item-tab Серьезные отношения
				span.item-tab Дружба
				span.item-tab (!доработать)

		.row-board.user-buttons
			button.btn.btn-primary АПГРЕЙД ПЛАНА
			button.btn.btn-primary-stroke ПОВЫСИТЬ ПРОФИЛЬ